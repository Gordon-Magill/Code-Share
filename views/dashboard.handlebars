{{!-- Welcome info --}}
<div class="text-center">
  <h2 class="text-gray font-bold text-4xl">
    Welcome, {{session.username}}!
  </h2>
</div>


{{!-- Two columns of content --}}
<div class="justify-center lg:grid-cols-2 lg:flex sm:block">



  {{!-- Section for submitting new posts --}}
  <div class="popIn mt-10 mx-5" id="submission-form">

    <form class="bg-gray py-10 px-10 rounded-lg form new-submission-form">
      <h2 class="text-white text-xl">Create a New Code Share:</h2>



      <!--Submission Name-->
      <div class="mt-6">
        <label for="submission-name" class="block text-sm font-medium">
          <span class="my-2 text-white">Submission Name:</span>
          <input id="submission-name" type="text"
            class="w-full px-3 py-2 bg-white border shadow-sm placeholder-gray-light">
        </label>
      </div>

      <!--Submission Content-->
      <div class="mt-6">
        <label for="submission-content" class="block text-sm font-medium">
          <span class="my-2 text-white">Code Content:</span>
          <input type="text" id="submission-content"
            placeholder="Simply copy and paste. We'll take care of the styling."
            class="highlight w-full px-3 py-2 bg-white border shadow-sm placeholder-gray-light">
        </label>
      </div>

      <!--Submission Description-->
      <div class="mt-6">
        <label for="submission-desc" class="block text-sm font-medium text-slate-700">
          <span class="my-2 text-white">Describe Your Submission:</span>
          <input id="submission-desc" type="text"
            class="w-full px-3 py-2 bg-white border shadow-sm  placeholder-gray-light">
        </label>
      </div>

      <!--Submission Language-->
      <div class="mt-6">
        <label for="submission-language" class="block text-sm font-medium text-slate-700">
          <span class="my-2 text-white">Code Language:</span>
          <select class="block w-full mt-1" id="submission-language">
            <option value="HTML">HTML</option>
            <option value="CSS">CSS</option>
            <option value="Javascript">Javascript</option>
            <option value="Python">Python</option>
            <option value="C++">C++</option>
            <option value="COBOL">COBOL</option>
            <option value="FORTRAN">FORTRAN</option>
            <option value="PHP">PHP</option>
          </select>
        </label>
      </div>

      {{!-- Codepen embed --}}
<div class="hidden sm:block popIn my-5">
  <h3 class="font-semibold text-center text-white my-5 text-lg">Want to test your code before submitting?</h3>
  <p class="codepen" data-height="300" data-theme-id="dark" data-default-tab="html,result" data-slug-hash="gOKRwyb"
    data-editable="true" data-user="arielle-elak"
    style="height: 300px; box-sizing: border-box; display: flex; align-items: center; justify-content: center; border: 2px solid; margin: 1em 0; padding: 1em;">
    <span>See the Pen <a href="https://codepen.io/arielle-elak/pen/gOKRwyb">
        Test Your Code Here</a> by Arielle Schlickman-Elak (<a href="https://codepen.io/arielle-elak">@arielle-elak</a>)
      on <a href="https://codepen.io">CodePen</a>.</span>
  </p>
  <script async src="https://cpwebassets.codepen.io/assets/embed/ei.js"></script>
</div>

      <!--Submission Button-->
      <div class="mt-6">
        <button id="form-submit" class="bg-blue  hover:bg-gray-light hover:text-white px-5 py-2.5 text-md leading-5 rounded-md font-semibold text-gray"
          type="submit">Create</button>
      </div>
      </form>

  </div>
  {{!-- Section for displaying your posts --}}
  <div class="popIn mx-10 mt-5">
    <div class="gsubmission-list">
      <h2 class="text-left py-5 text-2xl font-bold text-gray">Your Code Shares:</h2>

      <div class="">
        {{!-- Loop over all submissions and make a card for each --}}
        {{#if submissions.length}}
          {{#each submissions as |submission|}}
            <div class="submissionContainer w-fit">
              <div class="flex submission max-w-md">

                {{!-- Delete button --}}
                <div class="p-1 m-auto">
                  <div class="border-black border-solid border-pink bg-pink rounded p-2 h-10 text-center font-bold"
                    data-id="{{submission.id}}">DELETE</div>
                </div>

                {{! Post title and icon }}
                <div class="p-2 flex flex-col items-center my-auto w-40" id="col1-name">
                  <div class="m-1">
                    <h2 class="font-bold text-base md:text-large text-center">
                      <a href="/submission/{{submission.id}}">{{submission.name}}</a>
                    </h2>
                    {{!-- <p class="text-sm sm:block">
                    {{submission.description}}
                  </p> --}}
                  </div>
                  <img class="mx-auto w-10 h-10 justify-center" src="/assets/lang-icons/{{submission.language}}.svg" />
                </div>

                {{!-- Description --}}
                <div class="m-2 p-2 border-gray rounded bg-gray-light bg-opacity-10 w-fit max-w-sm">
                  <p>{{submission.content}}</p>
                </div>

              </div>
            </div>
          {{/each}}
        {{else}}
          <h2 class="font-semibold text-base mt-4">You haven't submitted anything yet! <br> Please use the form to make
            a
            new
            submission.</h2>
        {{/if}}
      </div>
    </div>
  </div>
  </div>
</div>
