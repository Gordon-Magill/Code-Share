<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Submit a New Code Share:</h3>

    <form class="form new-snippet-form">
      <div class="form-group">
        <label for="snippet-name">snippet name:</label>
        <input class="form-input" type="text" id="snippet-name" name="snippet-name" />
      </div>
      <div class="form-group">
        <label for="snippet-content">content:</label>
        <textarea class="form-input" id="snippet-content" name="snippet-content"></textarea>
      </div>
      <div class="form-group">
        <label for="snippet-desc">description:</label>
        <textarea class="form-input" id="snippet-desc" name="snippet-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if snippets.length}}
  <div class="col-md-6 snippet-list">
    <h3>Your Code Shares:</h3>

    {{#each snippets as |snippet|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/snippet/{{snippet.id}}">{{snippet.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{snippet.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
