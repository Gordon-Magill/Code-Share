<div class="col-auto">
  <h2 class="text-4xl">
    Welcome, {{session.username}}!
  </h2>
</div>

<div class="grid grid-cols-2">

  <div class="mt-10 mx-10" id="submission-form">
    <h2 class="text-xl">Create a New Code Share:</h2>
    <form class="form new-submission-form">
      <!--Submission Name-->
      <div class="mt-6">
        <label for="submission-name" class="block text-sm font-medium">
          <span>Submission Name:</span>
          <input id="submission-name" type="text" class="w-full px-3 py-2 bg-white border shadow-sm placeholder-gray-light">
        </label>
      </div>
    <!--Submission Content-->
    <div class="mt-6">
      <label for="submission-content" class="block text-sm font-medium">
        <span>Code Content:</span>
        <input type="text" id="submission-content"
          class="highlight w-full px-3 py-2 bg-white border shadow-sm placeholder-gray-light">
      </label>
    </div>
    <!--Submission Description-->
    <div class="mt-6">
      <label for="submission-desc" class="block text-sm font-medium text-slate-700">
        <span>Describe Your Submission:</span>
        <input id="submission-desc" type="text" class="w-full px-3 py-2 bg-white border shadow-sm  placeholder-gray-light">
      </label>
    </div>
    <!--Submission Language-->
    <div class="mt-6">
      <label for="submission-language" class="block text-sm font-medium text-slate-700">
        <span>Code Language:</span>
        <select class="block w-full mt-1" id="submission-language">
          <option value="HTML">HTML</option>
          <option value="CSS">CSS</option>
          <option value="Javascript">Javascript</option>
          <option value="Python">Python</option>
          <option value="C++">C++</option>
          <option value="COBOL">COBOL</option>
          <option value="FORTRAN">FORTRAN</option>
          <option value="PHP">PHP</option>
        </select>
      </label>
    </div>
    <!--Submission Button-->
    <div class="mt-6">
      <button id="form-submit" class="bg-gray px-5 py-2.5 text-md leading-5 rounded-md font-semibold text-white"
        type="submit">Create</button>
    </div>
    </form>
    <div class="my-5">
      <h3 class="font-semibold text-lg">Want to test your code before submitting?</h3>
      <p class="codepen" data-height="300" data-theme-id="dark" data-default-tab="html,result" data-slug-hash="gOKRwyb"
        data-editable="true" data-user="arielle-elak"
        style="height: 300px; box-sizing: border-box; display: flex; align-items: center; justify-content: center; border: 2px solid; margin: 1em 0; padding: 1em;">
        <span>See the Pen <a href="https://codepen.io/arielle-elak/pen/gOKRwyb">
            Test Your Code Here</a> by Arielle Schlickman-Elak (<a href="https://codepen.io/arielle-elak">@arielle-elak</a>)
          on <a href="https://codepen.io">CodePen</a>.</span>
      </p>
      <script async src="https://cpwebassets.codepen.io/assets/embed/ei.js"></script>
    </div>
  </div>



  <div class="mx-10 mt-10">
    <div class="col-md-6 submission-list">
      <h2 class="text-xl">Your Code Shares:</h2>
      {{#if submissions.length}}
        {{#each submissions as |submission|}}
          <div class="row mb-2">
            <div class="col-md-8">
              <h4><a href="/submission/{{submission.id}}">{{submission.name}}</a></h4>
            </div>
            <div class="col-md-4">
              <button class="btn btn-sm btn-danger" data-id="{{submission.id}}">DELETE</button>
            </div>
          </div>
        {{/each}}
        {{else}}
          <h2 class="font-semibold text-base mt-4">You haven't submitted anything yet! <br> Please use the form to make a new
            submission.</h2>
      {{/if}}
    </div>
  </div>

</div>



</div>
